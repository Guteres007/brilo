{% extends 'base.html.twig' %}

{% block title %}Hello CryptoController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% if errors | length == 0 %} 
    <h1>{{bitcoinPriceDto.chartName}}</h1>
    <p>{{bitcoinPriceDto.disclaimer}}</p>
    <p>{{bitcoinPriceDto.time.updatedISO | date('d. m. Y H:i:s')}}</p>
    <ul>
        <li> {{bitcoinPriceDto.bpi.USD.symbol | raw}} {{bitcoinPriceDto.bpi.USD.rate}} </li>
        <li> {{bitcoinPriceDto.bpi.GBP.symbol | raw}} {{bitcoinPriceDto.bpi.GBP.rate}} </li>
        <li> {{bitcoinPriceDto.bpi.EUR.symbol | raw}} {{bitcoinPriceDto.bpi.EUR.rate}} </li>
    </ul>
{% else %} 
    <h1>There was an error</h1>
{% endif %} 
</div>
{% endblock %}
